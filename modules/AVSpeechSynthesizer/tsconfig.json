{
    "include": ["./src/*"],
    "exclude": ["node_modules/"],
    "compilerOptions": {
        "strict": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "resolveJsonModule": true,
        "verbatimModuleSyntax": true,
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": true,
        "baseUrl": ".",
        "outDir": "./",
        "declaration": true,
        "listEmittedFiles": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    }
}
